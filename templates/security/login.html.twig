{% extends 'layouts/base.html.twig' %}

{% block title 'Log in!' %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="mt-5  mb-3 text-center">Please sign in</h1>
        <p class="mb-5 text-center text-muted">Your pins are watingfor you.</p>

        <form method="post">
    {% if error %}
        <div class="alert alert-error">{{ error.messageKey|trans(error.messageData, 'security') }}

        </div>
    {% endif %}

    
<div class="form-group">
   
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
</div>

<div class="form-group">
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
</div>

<diV class="d-flex justify-content-between">
<div class="form-group">
   <div class="form-chek">
        <input class="form-chek-input" type="checkbox" name="_remember_me" id="remember_me"> 
        <label class="form-check-label" for ="remember_me" >
        Remember me
    </label>
</diV>
</diV>
<a href="{{path('app_forgot_password_request')}}"> Forgot password ?</a>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="col-md-12 mx-auto mt-5 mb-3 text-center btn  btn-lg btn-block btn-primary" type="submit">
        Sign in
    </button>

             <p class="mt-5 mb-3 text-center text-muted">
                 Not registered yet ? <a href="{{path('app_register')}}">Create an account </a>
            </p>
            </form>
       
      
{% endblock %}
