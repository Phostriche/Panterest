{% extends 'base.html.twig' %}

{% block title 'Les meilleurs pins du monde' %}

{% block body %}

    <h1>{{pluralize(pins|length,'Pin')}} </h1>
{% for pin in pins %}
  <article>
      <h2><a href="{{path('app_pins_show', {id:pin.id}) }} ">{{pin.title}}</a></h2></a></h2>
      <p>{{pin.description|u.truncate(15,'...',true)}} </p>
      <p>Submitted {{pin.createdAt |ago}} </p>
  </article>
{% endfor %}
{% endblock %}
